# ======================================
# WarungKu Web - Environment Configuration
# ======================================
# Copy this file to .env and run: php artisan key:generate
# NEVER commit .env file to version control!

APP_NAME=WarungKu
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ======================================
# Logging
# ======================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ======================================
# Database - Supabase PostgreSQL
# ======================================
# Get these from Supabase project settings > Database
DB_CONNECTION=pgsql
DB_HOST=db.your-project-id.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=your-database-password

# ======================================
# Session & Cache
# ======================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file

# ======================================
# Payment Gateway (Duitku)
# ======================================
# Get these from your Duitku Sandbox/Production Dashboard
DUITKU_MERCHANT_CODE=D0001
DUITKU_API_KEY=your-duitku-api-key
DUITKU_SANDBOX_MODE=true
# Use Ngrok URL for local dev callback testing
# e.g. https://xxxx-xxxx.ngrok-free.app/webhook/payment
PAYMENT_CALLBACK_URL=https://your-domain.com/webhook/payment

# ======================================
# Supabase (for Realtime features)
# ======================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ======================================
# Vite
# ======================================
VITE_APP_NAME="${APP_NAME}"
